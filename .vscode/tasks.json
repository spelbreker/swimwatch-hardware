{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "PlatformIO Build",
			"type": "shell",
			"command": "~/.platformio/penv/Scripts/platformio.exe",
			"args": [
				"run"
			],
			"group": "build",
			"isBackground": false
		},
		{
			"label": "PlatformIO Upload",
			"type": "shell",
			"command": "~/.platformio/penv/Scripts/platformio.exe",
			"args": [
				"run",
				"--target",
				"upload"
			],
			"group": "build",
			"isBackground": false
		}
	]
}